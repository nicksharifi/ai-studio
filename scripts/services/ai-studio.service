[Unit]
Description=ai-studio automation service
After=network.target
StartLimitIntervalSec=30
StartLimitBurst=3

[Service]
Type=simple
Restart=on-failure
RestartSec=1
User=debian
ExecStart=/usr/bin/python3 /home/debian/ai-studio/src/__main__.py

StandardError=append:/home/debian/ai-studio/log/cerr.log

